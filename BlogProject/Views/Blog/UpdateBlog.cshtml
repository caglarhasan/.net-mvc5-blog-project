@model EntityLayer.Concrete.Blog

@{
    ViewBag.Title = "UpdateBlog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h1>Blog Güncelleme</h1>
    </div>
    <div class="card-body">
        <form class="form-group" method="post">
            @Html.Label("ID")
            @Html.TextBoxFor(x => x.BlogId, new { @class = "form-control" })
            <br />
            @Html.Label("Başlık")
            @Html.TextBoxFor(x => x.BlogTitle, new { @class = "form-control" })
            <br />
            @Html.Label("Kategori")
            @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.categories, new { @class = "form-control" })
            <br />
            @Html.Label("Resim")
            @Html.TextBoxFor(x => x.BlogImage, new { @class = "form-control" })
            <br />
            @Html.Label("Yazar")
            @Html.DropDownListFor(x => x.AuthorId, (List<SelectListItem>)ViewBag.authors, new { @class = "form-control" })
            <br />
            @Html.Label("Tarih")
            @Html.TextBoxFor(x => x.BlogDate, new { @class = "form-control" })
            <br />
            @Html.Label("İçerik")
            @Html.TextAreaFor(x => x.BlogContent, new { @class = "form-control", rows = "14" })
            <br />
            <button class="btn btn-info">Güncelle</button>
        </form>
    </div>
</div>

