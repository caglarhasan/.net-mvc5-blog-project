@model IEnumerable<EntityLayer.Concrete.About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="site-cover site-cover-sm same-height overlay single-page" style="background-image: url('/blog-template/images/img_4.jpg');">
    <div class="container">
        <div class="row same-height justify-content-center">
            <div class="col-md-12 col-lg-10">
                <div class="post-entry text-center">
                    <h1 class="">Hakkımızda</h1>
                    <p class="lead mb-4 text-white">Biz Kim Miyiz?</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!--First Content-->
<div class="site-section bg-light">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 order-md-2">
                    <img src="@item.AboutImage1" alt="Image" class="img-fluid">
                </div>
                <div class="col-md-5 mr-auto order-md-1">
                    <h2>Biz Kimiz ?</h2>
                    <p>@item.AboutContent1</p>
                    <ul class="ul-check list-unstyled success">
                        <li>Yeni Konular Hakkında Bilgiler</li>
                        <li>Her İnsana Hitap Eden Konu Başlıkları</li>
                        <li>Her Konuya Özgürce Yorum Yapabilme Olanağı</li>
                        <li>Özgürce Bloglarınızı Yazabileceğiniz Platform</li>
                    </ul>
                </div>
            }
            </div>
        </div>
    </div>

    <!--Team Members-->
    @Html.Action("MeetTheTeam", "About")

    <!--Second Content-->
    <div class="site-section bg-light">
        <div class="container">
            <div class="row">
                @foreach (var item in Model)
                {
                <div class="col-md-6">
                    <img src="@item.AboutImage2" alt="Image" class="img-fluid">
                </div>
                <div class="col-md-5 ml-auto">
                    <h2>Neler Yapıyoruz ?</h2>
                    <p class="mb-4">@item.AboutContent2</p>

                    <ul class="ul-check list-unstyled success">
                        <li>Her Gün Onlarca Yeni Blog Yazısı</li>
                        <li>10'dan Fazla Kategori</li>
                        <li>20'den Fazla Yazar</li>
                        <li>Günde Yüzlerce Yapılan Yorum</li>
                    </ul>
                </div>
                }
            </div>
        </div>
    </div>

    @Html.Action("AddMail", "SubscribeMail")

