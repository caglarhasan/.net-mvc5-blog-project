

@model IEnumerable<EntityLayer.Concrete.Comment>

@{
    ViewBag.Title = "AdminCommentList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">
                            <div class="container-fluid">
                                <div class="row mb-2">
                                    <div class="col-sm-6">
                                        <h1>Yayınlanmayan Yorumlar</h1>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="tab-content">
                                <div class="active tab-pane" id="activity">
                                    @foreach (var item in Model)
                                    {
                                        <div class="post">
                                            <div class="user-block">
                                                <img class="img-circle img-bordered-sm" src="/admin-template/dist/img/user1-128x128.jpg" alt="user image">
                                                <span class="username">
                                                    <a href="#">@item.UserName -- @item.Blog.BlogTitle</a>
                                                </span>
                                                <span class="description">@(((DateTime)item.CommentDate).ToString("dd-MMMM-yyyy"))</span>
                                            </div>
                                            <p>
                                                @item.CommentText
                                            </p>
                                            <span class="float-right">
                                                <a href="/Comment/ChangeCommentStatusToTrue/@item.CommentId" class="link-black text-sm">
                                                    <i class="far fa-comments mr-1"></i> Yorumu Onayla
                                                </a>
                                            </span>
                                            <br />
                                        </div>
                                    }
                                </div>

                                <!-- /.tab-pane -->
                            </div>
                            <!-- /.tab-content -->
                        </div><!-- /.card-body -->
                    </div>
                    <!-- /.nav-tabs-custom -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
</body>
</html>




