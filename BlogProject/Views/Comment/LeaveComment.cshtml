<div class="comment-form-wrap pt-5">
    <h3 class="mb-5">Yorum Yap</h3>
    <form method="post" class="p-5 bg-light">
        <div class="form-group">
            <label for="UserName">Kullanıcı Adı *</label>
            <input type="text" class="form-control" name="UserName">
        </div>
        <div class="form-group">
            <label for="email" >E-Posta Adresi *</label>
            <input  type="text" class="form-control" name="Mail">
        </div>
        <input type="hidden" name="CommentDate" value="@DateTime.Now.ToShortDateString()" />
        <input type="hidden" name="BlogId" value="@ViewBag.id" />
        <div class="form-group">
            <label for="Message">Yorum *</label>
            <textarea name="CommentText" cols="30" rows="10" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Yorum Yap" class="btn btn-primary">
        </div>
    </form>
</div>
